@model Equinox.Models.ClassCategory
@{
    string title = ViewBag.Action + " ClassCategory";
    ViewData["Title"] = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ClassCategoryId" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="ManageClassCategory" asp-action="List" class="btn btn-primary">Cancel</a>
</form>